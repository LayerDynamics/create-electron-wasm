{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["DOM", "ES2020"],
		"jsx": "react-jsx",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/renderer/**/*.ts", "src/renderer/**/*.tsx"]
}
